= simple_form_for(:user, url: registration_path(:user)) do |f|
  = f.error_notification

  .row
    .large-8.push-1.columns
      .form-inputs
        = f.input :email, required: true, autofocus: true

    .large-2.pull-1.columns
      .form-inputs
        = f.input :household_size, as: :integer, required: true

  .row
    .large-4.small-centered.columns
      .form-actions
        = f.button :submit, "Sign up", class: "full-width"

%p
  Never got your confirmation e-mail?
  = link_to "Click here.", new_confirmation_path(:user)